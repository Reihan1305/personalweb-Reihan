{{!-- form bootstrap --}}
<form method="post" action="/edit-project/{{projects.id}}">
  <h2 class="fs-1 mt-5" style="text-align: center;">Edit Project</h2>
<div  style="width: 500px;margin: auto;">
  <div class="mt-2">
    <label for="project-title" class="form-label fs-5">Project Name</label>
    <input type="text" class="form-control p-3" id="project-title" name="title" value="{{projects.title}}" aria-describedby="emailHelp">
  </div>
  <div class="d-flex flex-row mt-2" style="gap: 20px;">
    <div style="flex: 50%;">
    <label for="start-date" class="form-label fs-5" style="">Start Date</label>
    <input type="date" class="form-control py-3" name="startdate" value="{{projects.startdate}}" id="start-date">
    </div>
    <div style="flex: 50%;">
    <label for="end-date" class="form-label fs-5">End Date</label>
    <input type="date" class="form-control py-3" name="enddate" value="{{projects.enddate}}" id="end-date">
    </div>
  </div>
  <div class="mt-2">
    <label for="project-content" class="form-label fs-5">Project</label>
    <textarea style="resize: none;" class="form-control py-4" name="content" id="project-content" >{{projects.content}}</textarea>
  </div>
  <div class="d-flex flex-row" style="gap: 10px; height: auto;">
    <div class="d-flex flex-column"    >
        <div class="p-1" style="width: 150px;">
          <div class="form-check">
              <input class="form-check-input me-3" style="padding: 10px;" name="reactjs" type="checkbox"  id="reactjs" {{#if projects.reactjs}}checked{{/if}}>
              <label class="form-check-label" for="reactjs">
                React JS
              </label>    
          </div>
        </div>
        <div class="p-1" style="width: 150px;">
          <div class="form-check">
              <input class="form-check-input me-3" style="padding: 10px;" name="python" type="checkbox"  id="python" {{#if projects.Python}}checked{{/if}}>
              <label class="form-check-label" for="python">
                Python
              </label>    
          </div>
        </div>
    </div>
    <div class="d-flex flex-column">
      <div class="p-1" style="width: 150px;">
        <div class="form-check">
              <input class="form-check-input me-3" style="padding: 10px;" name="nodejs" type="checkbox"  id="nodejs"{{#if projects.nodejs}} checked {{/if}}>
              <label class="form-check-label" for="nodejs">
                Node Js
              </label>    
          </div>
      </div>
      <div class="p-1" style="width: 150px;">
        <div class="form-check">
              <input class="form-check-input me-3" style="padding: 10px;" name="github" type="checkbox"  id="github" {{#if projects.github}} checked {{/if}}>
              <label class="form-check-label" for="github">
                Github
              </label>    
          </div>
      </div>
    </div>
  </div>
  <div>
  <label for="formFileLg" class="form-label fs-5">Choose File</label>
  <input class="form-control form-control-lg" id="formFileLg" type="file">
  </div>
  <div class="d-flex justify-content-end mt-3">
    <button type="submit" class="btn btn-dark">Submit</button>
  </div>
</div>
</form>
