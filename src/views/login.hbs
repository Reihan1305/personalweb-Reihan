      <!--form Login -->
    <form method="post" action="/login" class="container-form">
    <h3 class="fs-1 mt-5" style="text-align: center;">Login To Your Account</h3>
    <div>
        <div class="mt-2">
            <label for="project-title" class="mt-3 form-label fs-5 fw-bolder">Email</label>
            <input type="email" class="form-control p-2 input-style" id="email" name="email" aria-describedby="emailHelp">
        </div>
        {{!-- new password --}}
        <div class="col-12 ">
            <label for="project-title" class="mt-3 form-label fs-5 fw-bolder">password</label>
            <div class="input-group mb-3 input-style">
              <input name="password" type="password" value="" class="input form-control" id="password" placeholder="password" required="true" aria-label="password" aria-describedby="basic-addon1" />
              <div class="input-group-append">
                <span class="input-group-text p-3" onclick="passwordToggle();">
                  <i class="fas fa-eye" id="openEye"></i>
                  <i class="fas fa-eye-slash d-none" id="closeEye"></i>
                </span>
              </div>
            </div>
        </div>
        {{!-- new password done --}}
         <div class="d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
      </div>
    </form>
    <script>
        function passwordToggle(){
          let password = document.getElementById("password");
          let openEye = document.getElementById("openEye");
          let closeEye = document.getElementById("closeEye");

          closeEye.classList.remove("d-none");
          if(password.type === "password"){
            password.type = "text";
            
            openEye.style.display = "none";
            closeEye.style.display = "block";
          }else{
            password.type = "password";

            openEye.style.display ="block";
            closeEye.style.display ="none";
          }
        }
    </script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
