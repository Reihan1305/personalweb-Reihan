      <!--form Login -->
     <form method="post" action="/login">
    <h2 class="fs-1 mt-5" style="text-align: center;">Login To Your Account</h2>
    <div  style="width: 500px;margin: auto;">
        <div class="mt-2">
            <label for="project-title" class="mt-3 form-label fs-5 fw-bolder">Email</label>
            <input type="email" class="form-control p-2" id="email" name="email" aria-describedby="emailHelp">
        </div>
        <div class="mt-2">
            <label for="project-title" class="mt-3 form-label fs-5 fw-bolder">password</label>
            <input type="password" class="form-control p-2" id="password" name="password" aria-describedby="emailHelp">
            <div class="mt-1">
            <input type="checkbox" class="form-check-input me-1" onclick="passwordtoggle()" id="togglepassword" >
            <label for="togglepassword" class="fw-bolder">Look Password</label>
            </div>
        </div>
         <div class="d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
        </div>
    </form>
    <script>
        function passwordtoggle(){
        let password = document.getElementById("password");
        if(password.type ==="password"){
            password.type = "text"
        }else{
            password.type ="password"
        }
        }
    </script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
